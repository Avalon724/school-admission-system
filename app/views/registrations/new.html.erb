<div class="background__index d-flex justify-content-center align-items-center" style="min-height: 90vh;">
  <%= form_with(model: @user, url: sign_up_path, local: true, html: { style: "min-width: 30%;" }) do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger alert-dismissable fade show" role="alert">
        <% @user.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>
    <section class="card my-5 shadow" style="background-color: rgba(114, 108, 248, 0.3);">
      <div class="card-body" style="background-color: rgba(167,85,145, 0.7);">
        <h3 class="card-title mb-4 text-white">Sign Up</h3>
          <div class="form-floating mb-3">
            <%= form.text_field :email, class: "form-control", placeholder: "john@doe.com" %>
            <%= form.label :email %>
          </div>
          <div class="form-floating mb-3">
            <%= form.text_field :name, class: "form-control", placeholder: "John Doe" %>
            <%= form.label :name %>
          </div>
          <div class="form-floating mb-3">
            <%= form.password_field :password, class: "form-control", placeholder: "password" %>
            <%= form.label :password %>
          </div>
          <div class="form-floating mb-3">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password" %>
            <%= form.label :password_confirmation %>
          </div>
          <div class="">
            <%= form.submit "Sign Up", class: "button__student", style: "min-width: 100%;" %>
          </div>
      </div>
    </section>
  <% end %>
</div>
