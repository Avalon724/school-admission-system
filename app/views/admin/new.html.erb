<%= form_with(model: @section, url: section_new_path, method: :post, local: true) do |form| %>
    <% if @section.errors.any? %>
      <div class="d-flex justify-content-center">
        <div class="alert alert-danger w-50 alert-dissmissable fade show mt-3 d-flex justify-content-between align-items-center" role="alert">
          <div>
            <% @section.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
            <% end %>
          </div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
  <div class="d-flex justify-content-center align-items-center">
    <section class="card text-white my-5 shadow" style="min-width: 25%; background-color: rgba(167,85,145, 0.7);">
      <div class="card-body">
        <h2 class="my-3 py-3">Add Section for admission</h2>
        <div class="form-floating mb-3">
          <%= form.text_field :name, class: "form-control", placeholder: "Name of the section" %>
          <%= form.label :name, "Section Name", class: "text-dark" %>
        </div>
        <div class="form-floating mb-3">  
          <%= form.select :value, options_for_select([["Admissions open", true], ["Admissions closed", false]], false), {}, { class: "form-select my-3" } %>
          <%= form.label :value, "Select the admission process", class: "text-dark" %>
        </div>
        <div class="form-floating mb-3">
        <%= form.number_field :fees, step: :any, class: "form-control", placeholder: "2000" %>
        <%= form.label :fees, "Admission Fees", class: "text-dark" %>
      </div>
        <div>
          <%= form.submit "Add Section", class: "button__student text-center" %>
        </div>
      </div>
    </section>
  </div>
<% end %>