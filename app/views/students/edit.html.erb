<div class="d-flex justify-content-center">
  <% # binding.pry %>
  <%= form_with(model: @student, url: student_path(@student), method: :patch, local: true, html: { style: "min-width: 50%;" }) do |form| %>
  <% if @student.errors.any? %>
    <div class="mt-3 alert alert-danger alert-dismissable fade show" role="alert">
      <% @student.errors.full_messages.each do |msg| %>
      <div><%= msg %></div>
      <% end %>
    </div>
  <% end %>
  <section class="card my-5 shadow" style="background-color: rgba(114, 108, 248, 0.3);">
    <div class="card-body">
      <h3 class="card-title mb-4 text-white">Student application form</h3>
      <h6 class="card-subtitle mb-3 text-white">Application form for admission of a new student</h6>
      <div class="form-floating mb-3">
        <%= form.text_field :name, class: "form-control", placeholder: "Jane Doe" %>
        <%= form.label :name, "Full Name *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.text_field :father, class: "form-control", placeholder: "Jane Doe" %>
        <%= form.label :father, "Father's Name *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.text_field :mother, class: "form-control", placeholder: "Jane Doe" %>
        <%= form.label :mother, "Mother's Name *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.number_field :age, class: "form-control", placeholder: "10" %>
        <%= form.label :age, "Age *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.text_area :address, class: "form-control", style: "height: 150px;", placeholder: "Your address" %>
        <%= form.label :address, "Address *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.telephone_field :pnumber, class: "form-control", placeholder: "1234567890" %>
        <%= form.label :pnumber, "Phone number *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.number_field :prevgrade, step: :any, class: "form-control", placeholder: "9" %>
        <%= form.label :prevgrade, "Previous test marks in % *" %>
      </div>
      <div class="form-floating mb-3">
        <%= form.select :section_id, options_for_select(@options, @student.section_id), {}, { class: "form-select" } %>
        <%= form.label :section_id, "Section for admission *" %>
      </div>
      <div class="mb-3">
        <%= form.label :photo, "Profile Picture Upload", class: "form-label text-white" %>
        <%= form.file_field :photo, class: "form-control py-3" %>
      </div>
            <div class="mb-3">
        <%= form.label :marksheet, "Marksheet Upload *", class: "form-label text-white" %>
        <%= form.file_field :marksheet, class: "form-control py-3" %>
      </div>
      <div class="d-flex text-center gap-3">
        <%= form.submit "Update", class: "button__student w-100" %>
        <%= link_to "Back", students_path, class: "button__student w-100" %>
      </div>
    </div>
  </section>
  <% end %>
</div>