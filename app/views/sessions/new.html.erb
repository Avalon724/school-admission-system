<div class="background__index d-flex flex-column justify-content-center align-items-center" style="min-height: 90vh;">
  <%= render partial: "shared/flash" %>
  <section class="card my-5 shadow" style="min-width: 25%; background-color: rgba(167,85,145, 0.7);">
    <div class="card-body">
      <h3 class="card-title mb-4 text-white">Sign In</h3>
      <%= form_with url: sign_in_path do |form| %>
      <div class="form-floating mb-3">
        <%= form.text_field :email, class: "form-control", placeholder: "john@doe.com" %>
        <%= form.label :email %>
      </div>
      <div class="form-floating mb-3">
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        <%= form.label :password %>
      </div>
      <div class="d-flex text-center gap-3">
        <%= form.submit "Sign In", class: "button__student w-100" %>
        <%= link_to "Sign Up", sign_up_path, class: "button__edit w-100" %>
      </div>
      <% end %>
    </div>  
  </section>
</div>